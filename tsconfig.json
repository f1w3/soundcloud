{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "outDir": ".out/typescript",
        "resolveJsonModule": true,
        "baseUrl": "src/",
        "paths": {
            "@/*": ["*"],
            "@instances/*": ["instances/*"],
            "@locales/*": ["i18n/locales/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}
