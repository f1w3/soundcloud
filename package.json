{
    "name": "soundcloud",
    "version": "1.0.3",
    "description": "soundcloud custom client",
    "license": "MIT",
    "author": {
        "name": "javascriptjp",
        "url": "https://github.com/javascriptjp",
        "email": "71214511+javascriptjp@users.noreply.github.com"
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "lint": "eslint -c .eslintrc --ext .ts ./src",
        "start": "npm run build && electron ./.dist/main.js",
        "build-electron": "npm run build && electron-builder --publish always"
    },
    "main": "./.dist/main.js",
    "build": {
        "appId": "com.javascriptjp.soundcloud",
        "productName": "SoundCloud",
        "asar": true,
        "files": [
            ".dist/**/*",
            "static/**/*"
        ],
        "directories": {
            "output": ".out"
        },
        "win": {
            "target": "nsis",
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
            "icon": "static/soundcloud-win.ico"
        },
        "publish": {
            "provider": "github",
            "owner": "javascriptjp",
            "repo": "soundcloud"
        }
    },
    "devDependencies": {
        "@types/discord-rpc": "^4.0.8",
        "@types/electron-localshortcut": "^3.1.3",
        "@types/node": "^20.12.7",
        "@typescript-eslint/eslint-plugin": "^7.7.0",
        "@typescript-eslint/parser": "^7.7.0",
        "electron": "^30.0.0",
        "electron-builder": "^24.13.3",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "discord-rpc": "^4.0.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.1.8"
    }
}
