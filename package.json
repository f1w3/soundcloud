{
    "name": "soundcloud",
    "version": "1.0.16",
    "description": "soundcloud custom client",
    "license": "MIT",
    "packageManager": "pnpm@9.1.2",
    "author": {
        "name": "javascriptjp",
        "url": "https://github.com/javascriptjp",
        "email": "71214511+javascriptjp@users.noreply.github.com"
    },
    "scripts": {
        "build": "webpack --mode production",
        "watch": "webpack -w --mode development",
        "dev": "electron ./.dist/main.js",
        "build:dev": "bun run build && electron-builder",
        "build:electron": "bun run build && electron-builder --publish always"
    },
    "main": "./.dist/main.js",
    "build": {
        "appId": "com.javascriptjp.soundcloud",
        "productName": "SoundCloud",
        "asar": true,
        "files": [
            ".dist/**/*"
        ],
        "directories": {
            "output": ".out"
        },
        "win": {
            "target": "nsis",
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
            "icon": "src/images/soundcloud-win.ico"
        },
        "publish": {
            "provider": "github",
            "owner": "javascriptjp",
            "repo": "soundcloud"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.24.7",
        "@babel/plugin-transform-class-properties": "^7.24.7",
        "@babel/plugin-transform-object-rest-spread": "^7.24.7",
        "@babel/preset-env": "^7.24.7",
        "@babel/preset-typescript": "^7.24.7",
        "@types/discord-rpc": "^4.0.8",
        "@types/node": "^20.14.9",
        "@types/temp": "^0.9.4",
        "@types/webpack": "^5.28.5",
        "@typescript-eslint/eslint-plugin": "^7.15.0",
        "@typescript-eslint/parser": "^7.15.0",
        "babel-loader": "^9.1.3",
        "css-loader": "^7.1.2",
        "electron": "^31.1.0",
        "electron-builder": "^24.13.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "json-loader": "^0.5.7",
        "license-checker-rseidelsohn": "^4.3.0",
        "prettier": "^3.3.2",
        "to-string-loader": "^1.2.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths-webpack-plugin": "^4.1.0",
        "typescript": "^5.5.3",
        "typescript-plugin-css-modules": "^5.1.0",
        "url-loader": "^4.1.1",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4",
        "webpack-shell-plugin-next": "^2.3.1"
    },
    "dependencies": {
        "axios": "^1.7.2",
        "discord-rpc": "^4.0.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.2.1",
        "log4js": "^6.9.1",
        "node-id3": "^0.2.6",
        "scdl-core": "^1.1.0"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.8",
        "utf-8-validate": "^5.0.10"
    }
}
