{
    "name": "soundcloud",
    "version": "1.0.15",
    "description": "soundcloud custom client",
    "license": "MIT",
    "packageManager": "pnpm@9.1.2",
    "author": {
        "name": "javascriptjp",
        "url": "https://github.com/javascriptjp",
        "email": "71214511+javascriptjp@users.noreply.github.com"
    },
    "scripts": {
        "build": "webpack --mode production",
        "watch": "webpack -w --mode development",
        "dev": "chcp 65001 && electron ./.dist/main.js",
        "build:dev": "npm run build && electron-builder",
        "build:electron": "npm run build && electron-builder --publish always"
    },
    "main": "./.dist/main.js",
    "build": {
        "appId": "com.javascriptjp.soundcloud",
        "productName": "SoundCloud",
        "asar": false,
        "files": [
            ".dist/**/*",
            "static/**/*"
        ],
        "directories": {
            "output": ".out"
        },
        "win": {
            "target": "nsis",
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
            "icon": "static/soundcloud-win.ico"
        },
        "publish": {
            "provider": "github",
            "owner": "javascriptjp",
            "repo": "soundcloud"
        }
    },
    "devDependencies": {
        "@babel/core": "^7.24.5",
        "@babel/plugin-transform-class-properties": "^7.24.1",
        "@babel/plugin-transform-object-rest-spread": "^7.24.5",
        "@babel/preset-env": "^7.24.5",
        "@babel/preset-typescript": "^7.24.1",
        "@types/discord-rpc": "^4.0.8",
        "@types/node": "^20.12.12",
        "@types/webpack": "^5.28.5",
        "@typescript-eslint/eslint-plugin": "^7.10.0",
        "@typescript-eslint/parser": "^7.10.0",
        "babel-loader": "^9.1.3",
        "css-loader": "^7.1.2",
        "electron": "^30.0.8",
        "electron-builder": "^24.13.3",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "json-loader": "^0.5.7",
        "license-checker-rseidelsohn": "^4.3.0",
        "prettier": "^3.2.5",
        "to-string-loader": "^1.2.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths-webpack-plugin": "^4.1.0",
        "typescript": "^5.4.5",
        "typescript-plugin-css-modules": "^5.1.0",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "webpack-shell-plugin-next": "^2.3.1"
    },
    "dependencies": {
        "discord-rpc": "^4.0.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.1.8",
        "log4js": "^6.9.1"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.8",
        "utf-8-validate": "^5.0.10"
    }
}
